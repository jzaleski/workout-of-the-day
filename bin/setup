#!/usr/bin/env bash

set -e;

psql_cmd=$(which psql || echo -n);
if [ -z ${psql_cmd} ]; then
  echo "Could not locate \"psql\" binary";
  exit 1;
fi

echo "CREATE DATABASE ${DATABASE_NAME:-"workout_of_the_day"}" | \
  ${psql_cmd} "${DATABASE_BASE_URL:-"postgres://postgres:postgres@localhost:5432"}/postgres" || \
  true;

for script in schema seed; do
  $(dirname $0)/${script};
done
